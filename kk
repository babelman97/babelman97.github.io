    <script>
        // åµæ¸¬å¹³å°å’Œç€è¦½å™¨
        function detectPlatform() {
            const userAgent = navigator.userAgent;
            let platform = 'æœªçŸ¥';
            let browser = 'æœªçŸ¥';
            
            // åµæ¸¬ä½œæ¥­ç³»çµ±
            if (/iPhone|iPad|iPod/i.test(userAgent)) {
                platform = 'iOS';
            } else if (/Android/i.test(userAgent)) {
                platform = 'Android';
            } else if (/Windows/i.test(userAgent)) {
                platform = 'Windows';
            } else if (/Mac/i.test(userAgent)) {
                platform = 'macOS';
            } else if (/Linux/i.test(userAgent)) {
                platform = 'Linux';
            }
            
            // åµæ¸¬ç€è¦½å™¨
            if (/Chrome/i.test(userAgent) && !/Edge/i.test(userAgent)) {
                browser = 'Chrome';
            } else if (/Safari/i.test(userAgent) && !/Chrome/i.test(userAgent)) {
                browser = 'Safari';
            } else if (/Firefox/i.test(userAgent)) {
                browser = 'Firefox';
            } else if (/Edge/i.test(userAgent)) {
                browser = 'Edge';
            }
            
            return { platform, browser };
        }

        // é¡¯ç¤ºç‹€æ…‹è¨Šæ¯
        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('status');
            statusEl.textContent = message;
            statusEl.className = `status ${type}`;
            statusEl.style.display = 'block';
            
            setTimeout(() => {
                statusEl.style.display = 'none';
            }, 3000);
        }

        // ä¸»è¦é–‹å•Ÿ KKBOX å‡½æ•¸
        function openKKBOX(deepLink = '') {
            const { platform } = detectPlatform();
            const kkboxScheme = `kkbox://${deepLink}`;
            
            try {
                if (platform === 'iOS') {
                    // iOS å„ªå…ˆå˜—è©¦ Universal Linkï¼Œå†å˜—è©¦ URL Scheme
                    window.location.href = kkboxScheme;
                    
                    // å‚™ç”¨æ–¹æ¡ˆï¼šå¦‚æœ APP æœªå®‰è£ï¼Œå°å‘ App Store
                    setTimeout(() => {
                        if (document.hidden) return; // å¦‚æœå·²ç¶“è·³è½‰åˆ° APPï¼Œå°±ä¸åŸ·è¡Œ
                        window.location.href = 'https://apps.apple.com/tw/app/kkbox-%E9%9F%B3%E6%A8%82-podcast/id300915900';
                    }, 1500);
                    
                } else if (platform === 'Android') {
                    // Android ä½¿ç”¨ Intent URL
                    const intentUrl = `intent://open/${deepLink}#Intent;scheme=kkbox;package=com.skysoft.kkbox.android;S.browser_fallback_url=https://play.google.com/store/apps/details?id=com.skysoft.kkbox.android;end`;
                    window.location.href = intentUrl;
                    
                } else {
                    // æ¡Œé¢ç‰ˆç›´æ¥é–‹å•Ÿç¶²é ç‰ˆ
                    window.open('https://www.kkbox.com', '_blank');
                    showStatus('å·²é–‹å•Ÿ KKBOX ç¶²é ç‰ˆ', 'success');
                    return;
                }
                
                showStatus('æ­£åœ¨é–‹å•Ÿ KKBOX APP...', 'success');
                
            } catch (error) {
                console.error('é–‹å•Ÿ KKBOX æ™‚ç™¼ç”ŸéŒ¯èª¤:', error);
                showStatus('é–‹å•Ÿå¤±æ•—ï¼Œè«‹æ‰‹å‹•ä¸‹è¼‰ KKBOX APP', 'error');
                
                // éŒ¯èª¤æ™‚çš„å‚™ç”¨æ–¹æ¡ˆ
                setTimeout(() => {
                    if (platform === 'iOS') {
                        window.open('https://apps.apple.com/tw/app/kkbox-%E9%9F%B3%E6%A8%82-podcast/id300915900', '_blank');
                    } else if (platform === 'Android') {
                        window.open('https://play.google.com/store/apps/details?id=com.skysoft.kkbox.android', '_blank');
                    }
                }, 1000);
            }
        }

        // ç‰¹å®šåŠŸèƒ½é–‹å•Ÿå‡½æ•¸
        function openKKBOXSearch() {
            openKKBOX('search');
        }

        function openKKBOXPlaylist() {
            openKKBOX('playlist');
        }

        function openKKBOXRadio() {
            openKKBOX('radio');
        }

        function openKKBOXPodcast() {
            openKKBOX('podcast');
        }

        function openKKBOXChart() {
            openKKBOX('chart');
        }

        // é é¢è¼‰å…¥æ™‚åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            const { platform, browser } = detectPlatform();
            document.getElementById('platform').textContent = platform;
            document.getElementById('browser').textContent = browser;
        });

        // ç›£è½é é¢å¯è¦‹æ€§è®ŠåŒ–ï¼ˆç”¨æ–¼åˆ¤æ–·æ˜¯å¦æˆåŠŸé–‹å•Ÿ APPï¼‰
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                // é é¢è¢«éš±è—ï¼Œå¯èƒ½æ˜¯æˆåŠŸé–‹å•Ÿäº† APP
                console.log('é é¢å·²éš±è—ï¼Œå¯èƒ½æˆåŠŸé–‹å•Ÿ APP');
            }
        });
